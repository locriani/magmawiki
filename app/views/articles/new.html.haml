= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br
    = f.text_field :title

  = f.fields_for :current_revision do |cr_fields|
    .field
      = cr_fields.label :body
      %br
      = cr_fields.text_area :body
    .field
      = cr_fields.label :edit_summary
      %br
      = cr_fields.text_field :edit_summary

  = f.submit