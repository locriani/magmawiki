<!DOCTYPE html>
<%= raw "<html lang=\"#{I18n.locale}\">" %>
	<head>
		<title>
		  <% title = yield(:title) || @title %>
		  <%= h "#{title} ::" if title -%> 
		  <%= h MAGMAWIKI_CONFIG[:title] -%>
    </title>
		<%= javascript_include_tag 'rails', 'jquery-1.4.2.min', 'chroma-hash/chroma-hash', 'application' %>
		<%= stylesheet_link_tag 'reset', 'application', 'header', 'forms' %>
		<%# stylesheet_link_tag 'reset', 'application', 'header', 'forms' #, :cache => 'cache/all' %>
		<%= yield(:head) -%>
	</head>
  	<body>
		<%= render :partial => 'layouts/toolbar_header', :locals => define_toolbar_variables(@toolbar_locals) -%>
		<div id="body">
			<% flash.each do |name, msg| %>
				<%= content_tag :div, (h msg), :id => "flash_#{name}" -%>
			<% end %>
			<%= yield %>
		</div>
	</body>
</html>
