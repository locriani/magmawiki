= form_for [@article, @revision] do |f|
  - if @revision.errors.any?
    #error_explanation
      %h2
        = pluralize(@revision.errors.count, "error")
        prohibited this revision from being saved:
      %ul
        - @revision.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :body
    %br
    = f.text_area :body
  .field
    = f.label :edit_summary
    %br
    = f.text_field :edit_summary

  = f.submit